{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Specs",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--config ${workspaceFolder}/jest.config.js"],
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
    }
  ]
}
